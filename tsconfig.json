{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@user/*": [
        "src/modules/user/*"
      ],
      "@infra/*": [
        "src/infra/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ]
    }
  }
}
